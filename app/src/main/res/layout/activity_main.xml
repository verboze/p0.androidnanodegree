<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/bkgrdWindow"
    android:clickable="false"
    android:background="#7986CB">

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Spotify Streamer"
        android:id="@+id/streamerButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#5C6BC0"
        android:layout_marginBottom="5dp"
        android:onClick="displayToast" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Awesome Nanodegree Apps!"
        android:id="@+id/descrText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="displayToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Scores App"
        android:id="@+id/scoresButton"
        android:layout_below="@+id/streamerButton"
        android:layout_centerHorizontal="true"
        android:background="#5C6BC0"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="displayToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Library App"
        android:id="@+id/libraryButton"
        android:layout_below="@+id/scoresButton"
        android:layout_centerHorizontal="true"
        android:background="#5C6BC0"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="displayToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Build It Bigger"
        android:id="@+id/biggerButton"
        android:layout_below="@+id/libraryButton"
        android:layout_centerHorizontal="true"
        android:background="#5C6BC0"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:onClick="displayToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="XYZ Reader"
        android:id="@+id/readerButton"
        android:layout_below="@+id/biggerButton"
        android:layout_centerHorizontal="true"
        android:background="#5C6BC0"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="displayToast" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Capstone: My Own App"
        android:id="@+id/capstoneButton"
        android:layout_below="@+id/readerButton"
        android:layout_centerHorizontal="true"
        android:background="#880E4F"
        android:layout_marginTop="5dp"
        android:onClick="displayToast" />
</RelativeLayout>
